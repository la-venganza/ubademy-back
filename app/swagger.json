{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0", 
      "title": "Ubademy - Backend",
      "description": "Ubademy -  Coursera like app, for taller2",
      "license": {
        "name": "FIUBA",
        "url": "https://fi.uba.ar/"
      }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
      {
        "name": "Ubademy",
        "description": "Facade for ubademy services."
      }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    
    "paths": {
        "/auth": {
          "get": {
            "tags": ["Auth"],
            "summary": "Authenticate Client",
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/logout": {
          "get": {
            "tags": ["Auth"],
            "summary": "Logout client",
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/course": {
          "post": {
            "tags": ["Courses"],
            "summary": "Create new course",
            "responses": {
              "201": {
                "description": "OK",
                "content": {
                  "application/json": {
                    "id": "id of created course"
                  }
                } 
              },
              "400": {
                "description": "Error"
              }
            }
          }
        },
        "/course/:id": {
          "get": {
            "tags": ["Courses"],
            "summary": "Get course's content",
            "responses": {
              "200": {
                "description": "OK"
              },
              "400": {
                "description": "Error"
              }
            }
          },
          "put": {
            "tags": ["Courses"],
            "summary": "Modify course's content",
            "responses": {
              "200": {
                "description": "OK"
              },
              "400": {
                "description": "Error"
              }
            }
          }
        },
        "/user": {
          "post": {
            "tags": ["Users"],
            "summary": "Create new user",
            "responses": {
              "201": {
                "description": "OK",
                "content": {
                  "application/json": {
                    "id": "id of created user"
                  }
                } 
              },
              "400": {
                "description": "Error"
              }
            }
          }
        },
        "/users/:id": {
          "get": {
            "tags": ["Users"],
            "summary": "Get user's content",
            "responses": {
              "200": {
                "description": "OK"
              },
              "400": {
                "description": "Error"
              }
            }
          },
          "put": {
            "tags": ["Users"],
            "summary": "Modify user's content",
            "responses": {
              "200": {
                "description": "OK"
              },
              "400": {
                "description": "Error"
              }
            }
          }
        }
      }
      
  }